{
	"format_version": "1.19.0",
	"animation_controllers": {
		"controller.animation.poke.raccoon.movement": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": [
						"idle"
					],
					"transitions": [
						{
							"run": "q.ground_speed > 0.5"
						}
					],
					"blend_transition": 0.2
				},
				"run": {
					"animations": [
						"running"
					],
					"transitions": [
						{
							"idle": "q.ground_speed < 0.5"
						}
					],
					"blend_transition": 0.2
				}
			}
		},
		"controller.animation.poke.raccoon.sitting" : {
			"initial_state" : "idle",
			"states" : {
				"idle" : {
					"animations" : [ "idle" ],
					"transitions" : [
						{
							"sitting" : "query.is_sitting"
						}
					],
					"blend_transition": 0.2
				},
				"sitting" : {
					"animations" : [ "sit" ],
					"transitions" : [
						{
							"idle" : "!query.is_sitting"
						}
					],
					"blend_transition": 0.2
				}
			}
		}
	}
}