{
	"format_version": "1.10.0",
	"animation_controllers": {
		"controller.animation.necromancer.melee_attacking": {
			"initial_state": "default",
			"states": {
				"default": {
					"transitions": [
						{"attack": "variable.attack_time > 0.0"}
					]
				},
				"attack": {
					"animations": ["melee_attack"],
					"transitions": [
						{"default": "variable.attack_time <= 0.0"}
					]
				}
			}
		},
		"controller.animation.poke.necromancer": {
			"initial_state": "idle",
			"states": {
				"idle": {
					"animations": ["idle", "look_at_target_default"],
					"transitions": [
						{"walk": "query.ground_speed"},
						{"summon": "query.is_casting"}
					],
					"blend_transition": 0.25
				},
				"walk": {
					"animations": ["walk", "look_at_target_default"],
					"transitions": [
						{"idle": "!query.ground_speed"},
						{"summon": "query.is_casting"}
					],
					"blend_transition": 0.25
				},
				"summon": {
					"animations": ["summon"],
					"particle_effects": [
						{
							"effect": "spell",
							"locator": "right_hand"
						}
					],
					"transitions": [
						{"idle": "!query.is_casting"}
					]
				}
			}
		}
	}
}