{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "poke:knightling",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false
		},
		"component_groups": {
			"knightling": {
				"minecraft:type_family": {
					"family": [
						"knightling",
						"undead",
						"monster",
						"mob",
						"pfe:boss"
					]
				},
				"minecraft:attack": {
					"damage": 18
				},
				"minecraft:scale": {
					"value": 1
				},
				"minecraft:collision_box": {
					"width": 0.85,
					"height": 2.1
				},
				"minecraft:custom_hit_test": {
					"hitboxes": [
						{
							"width": 0.5,
							"height": 1.85,
							"pivot": [
								0,
								1.5,
								0
							]
						}
					]
				},
				"minecraft:behavior.hurt_by_target": {
					"priority": 1
				}
			},
			"timer":{
				"minecraft:timer": {
					"time": 1800,
					"looping": true,
					"time_down_event": {
						"event": "poke:despawn",
						"target": "self"
					}
				}
			},
			"despawn":{
				"minecraft:instant_despawn": {
					"remove_child_entities": false
				}
			}
		},
		"components": {
			"minecraft:nameable": {
				"name_actions":{
					"name_filter": "despawn",
					"on_named": {
						"event": "poke:despawn",
						"target": "self"
					}
				},
				"default_trigger": {
					"target": "self",
					"event": "poke:renamed"
				}
			},
			"minecraft:on_death": {
				"event": "death_sound"
			},
			"minecraft:scale": {
				"value": 2
			},
			"minecraft:loot": {
				"table": "loot_tables/poke/entities/knightling.json"
			},
			"minecraft:experience_reward": {
				"on_bred": "math.random(10,70)",
				"on_death": "query.last_hit_by_player?50:0"
			},
			"minecraft:health": {
				"value": 750,
				"max": 750
			},
			"minecraft:knockback_resistance": {
				"value": 0.5
			},
			"minecraft:behavior.melee_box_attack": {
				"priority": 4,
				"speed_multiplier": 1.4,
				"track_target": true
			},
			"minecraft:breathable": {
				"total_supply": 15,
				"suffocate_time": 0,
				"breathes_water": true
			},
			"minecraft:movement": {
				"value": 0.3
			},
			"minecraft:navigation.walk": {
				"is_amphibious": true,
				"can_path_over_water": true,
				"avoid_water": true,
				"avoid_damage_blocks": true
			},
			"minecraft:movement.basic": {},
			"minecraft:jump.static": {},
			"minecraft:can_climb": {},
			"minecraft:fire_immune": {},
			"minecraft:persistent": {},
			"minecraft:behavior.random_stroll": {
				"priority": 9,
				"speed_multiplier": 1
			},
			"minecraft:behavior.random_look_around": {
				"priority": 9
			},
			"minecraft:behavior.look_at_player": {
				"priority": 8,
				"look_distance": 6,
				"probability": 0.02
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:boss": {
				"hud_range": 55,
				"name": "entity.poke:knightling.name",
				"should_darken_sky": true
			},
			"minecraft:behavior.float": {
				"priority": 0
			},
			"minecraft:behavior.nearest_attackable_target": {
				"priority": 3,
				"within_radius": 16,
				"entity_types": [
					{
						"filters": {
							"any_of": [
								{
									"test": "is_family",
									"subject": "other",
									"operator": "==",
									"value": "player"
								}
							]
						},
						"max_dist": 16
					}
				],
				"must_see": true
			}			
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"knightling",
						"timer"
					]
				},
				"queue_command": {
					"command": [
						"execute as @a[r=50] run music stop 2",
						"execute as @a[r=50] run music play play.galatic_march 1 10"
					]
				}
			},
			"death_sound": {
				"queue_command": {
					"command": [
						"execute as @a[r=50] run music play music.game 1 5"
					]
				}
			},
			"poke:renamed":{
				"remove": {
					"component_groups": [
						"timer"
					]
				}
			},
			"poke:despawn":{
				"add": {
					"component_groups": ["despawn"]
				}
			}
		}
	}
}