				"hud_range": 100,
				"name": "entity.poke:dragon.name",
				"should_darken_sky": true
			},
			"minecraft:on_target_acquired":"poke:debug",
			"minecraft:behavior.look_at_target": {
				"look_distance": 8,
				"probability": 0.02,
				"angle_of_view_vertical": 360,
				"angle_of_view_horizontal": 360
			}
		},
		"events": {
			"minecraft:entity_spawned": {
				"add": {
					"component_groups": [
						"poke:dragon_spawning"
					]
				},
				"queue_command": {
					"command":[
						"tp @s ~ ~20 ~"
					]
				}
			},
			"poke:mode_switch_range":{
				"add": {
					"component_groups": ["poke:dragon_ranged"]
				},
				"remove": {
					"component_groups": [
						"poke:dragon_spawning"
					]
				}
			},
			"poke:mode_switch_spawning":{
				"remove": {
					"component_groups": ["poke:dragon_ranged"]
				},
				"add": {
					"component_groups": [
						"poke:dragon_spawning"
					]
				}
			},
			"poke:renamed":{
				"remove": {
					"component_groups": [
						"timer"
					]
				}
			},
			"poke:despawn":{
				"add": {
					"component_groups": ["despawn"]
				}
			}
		}
