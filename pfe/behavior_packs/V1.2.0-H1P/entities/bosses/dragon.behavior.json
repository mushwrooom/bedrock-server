						"pivot": [-0.1, 3.3, -17.4]
					}
				]
			},
			"minecraft:attack": {
				"damage": 35
			},
			"minecraft:experience_reward": {
				"on_death": 500
			},
			"minecraft:behavior.float": {"priority": 2},
			"minecraft:navigation.generic": {"can_path_from_air": true,"blocks_to_avoid": ["grass_block","stone"]},
			"minecraft:movement": {
				"value": 2.0
			},
			"minecraft:knockback_resistance": {
				"value": 1,
				"max": 1
			},
			"minecraft:movement.glide": {
				"start_speed": 0.9,
				"speed_when_turning": 1
			},
			"minecraft:physics": {
				"has_gravity": false,
				"has_collision": true,
				"push_towards_closest_space": true
			},
			"minecraft:loot": {
				"table": "loot_tables/poke/entities/dragon.json"
			},
			"minecraft:behavior.nearest_prioritized_attackable_target": {
				"priority": 1,
				"attack_interval": 0,
				"reselect_targets": true,
				"scan_interval": 15,
				"within_radius": 100.0,
				"target_search_height": -1.0,
				"entity_types": [
					{
						"filters": {
							"test": "is_family",
							"subject": "other",
							"value": "player"
						},
						"max_dist": 100
					}
				]
			},
			"minecraft:behavior.circle_around_anchor": {
				"speed_multiplier": 1,
				"goal_radius": 1,
				"radius_change": 1,
				"radius_adjustment_chance": 0.5,
				"height_adjustment_chance": 0.5,
