			},
			"minecraft:collision_box": {
				"height": 5,
				"width": 10
			},
			"minecraft:custom_hit_test": {
				"hitboxes": [
					{
						"width": 14.5,
						"height": 3,
						"pivot": [0.4, 3.9, -5.7]
					},
					{
						"width": 14.5,
