{
	"format_version": "1.20.60",
	"minecraft:item": {
		"description": {
			"identifier": "poke:death_helmet",
			"menu_category": {
				"category": "equipment",
				"group": "itemGroup.name.helmet"
			}
		},
		"components": {
			"minecraft:max_stack_size": 1,
			"minecraft:enchantable": {
				"value": 9,
				"slot": "armor_head"
			},
			"minecraft:durability": {
				"max_durability": 4100,
				"damage_chance": {
					"min": 60,
					"max": 100
				}
			},
			"minecraft:icon": { 
				"textures": { 
				  "default": "death_helmet" } 
			  }, 
			"minecraft:wearable": {
				"slot": "slot.armor.head",
				"protection": 14
			},
			"minecraft:repairable": {
				"repair_items": [
					{
						"items": [
							"poke:repair_core"
						],
						"repair_amount": "query.max_durability"
					},
					{
						"items": [
							"poke:death_ingot"
						],
						"repair_amount": "query.max_durability * 0.25"
					},
					{
						"items": [
							"poke:death_nugget"
						],
						"repair_amount": "query.max_durability * 0.03"
					},
					{
						"items": [
							"poke:death_helmet"
						],
						"repair_amount": "context.other->query.remaining_durability + 0.12 * context.other->query.max_durability"
					}
				]
			}, 
			"minecraft:tags": { 
			  "tags": [ 
				"minecraft:is_armor", 
				"minecraft:trimmable_armors" 
			  ] 
			} 
